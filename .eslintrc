{
  "extends": ["@ikscodes/eslint-config"],
  "parserOptions": {
    "project": [
      "./tsconfig.json",
      "./test/tsconfig.json"
    ]
  },
  "rules": {
    "import/extensions": 0,
    "no-alert": 0,
    "@typescript-eslint/await-thenable": 0,
    "react/button-has-type": 0,
    "no-cond-assign": 0,
    "class-methods-use-this": 0,
    "no-underscore-dangle": 0,
    "no-useless-constructor": 0
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "directory": [
          "./tsconfig.json",
          "./test/tsconfig.json"
        ]
      }
    }
  }
}
